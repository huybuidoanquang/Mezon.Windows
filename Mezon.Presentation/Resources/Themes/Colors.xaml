<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mezon.Presentation.Resources.Themes">

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Light">
            <Color x:Key="MezonBrandColor">#0078D4</Color>
            <SolidColorBrush x:Key="MezonBrandBrush" Color="{StaticResource MezonBrandColor}"/>

            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ChatBubbleIncomingBrush" Color="#F0F0F0"/>
            <SolidColorBrush x:Key="ChatBubbleOutgoingBrush" Color="{StaticResource MezonBrandColor}"/>

            <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="#000000"/>
            <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="#666666"/>
            <SolidColorBrush x:Key="ChatTextOutgoingBrush" Color="#FFFFFF"/>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <Color x:Key="MezonBrandColor">#4CC2FF</Color>
            <SolidColorBrush x:Key="MezonBrandBrush" Color="{StaticResource MezonBrandColor}"/>

            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#202020"/>
            <SolidColorBrush x:Key="ChatBubbleIncomingBrush" Color="#323232"/>
            <SolidColorBrush x:Key="ChatBubbleOutgoingBrush" Color="#0063B1"/>

            <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="#CCCCCC"/>
            <SolidColorBrush x:Key="ChatTextOutgoingBrush" Color="#FFFFFF"/>
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
